<%- include("partials/header") -%>

    <div class="box" id="heading">
      <h1><%= listTitlePassToH1 %> todo list</h1>
      <p class="white-font">(<%= todayDate %>)</p>
    </div>

    <div class="box">
      <p>By selecting the checkbox next to each item, will DELETE the item instantly.</p>
        <% listItems.forEach(item => { %>
          <form action="/deleteItem" method="post">
            <div class="item">
              <input type="checkbox" name="itemID" value="<%= item._id %>" onChange="this.form.submit()"></input>
              <input type="hidden" name="listName" value="<%= listTitlePassToH1 %>"></input>
              <p><%= item.name %></p>
            </div>
          </form>
        <% }); %>

        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="listName" value="<%= listTitlePassToH1 %>">+</button>
        </form>
    </div>

<%- include("partials/footer") -%>
